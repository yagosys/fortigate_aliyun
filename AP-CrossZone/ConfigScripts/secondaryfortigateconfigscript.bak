config system global
    set hostname "SecondaryFortiGate"
    set admin-sport 443
end
config system interface
    edit "port1"
        set vdom "root"
        set mode static
        set ip 192.168.11.11 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
        set snmp-index 1
    next
    edit "port2"
        set vdom "root"
        set mode static
        set ip 192.168.12.11 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
    next
    edit "port3"
        set vdom "root"
        set mode static
        set ip 192.168.13.11 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
    next
    edit "port4"
        set vdom "root"
        set mode static
        set ip 192.168.14.11 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
    next
end
config router static
    edit 1
       set gateway 192.168.11.253
       set device "port1" 
    next
end

config system ha
	set group-name "fgtha2"
	set mode a-p
	set hbdev "port3" 0
	set session-pickup enable
	set ha-mgmt-status enable
	config ha-mgmt-interface
		edit 1
			set interface "port4"
			set gateway 192.168.14.253
		next
	end
	set priority 50
	set monitor "port1"
	set unicast-hb enable
	set unicast-hb-peerip 192.168.3.10
end

