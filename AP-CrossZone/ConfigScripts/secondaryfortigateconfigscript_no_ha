config system global
    set hostname "SecondaryFortiGate"
    set admin-sport 443
end
config system interface
    edit "port1"
        set vdom "root"
        set mode static
        set ip 10.0.21.12 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
        set snmp-index 1
    next
    edit "port2"
        set vdom "root"
        set mode static
        set ip 10.0.22.12 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
    next
    edit "port3"
        set vdom "root"
        set mode static
        set ip 10.0.23.12 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
    next
    edit "port4"
        set vdom "root"
        set mode static
        set ip 10.0.24.12 255.255.255.0
        set allowaccess ping https ssh fgfm
        set type physical
    next
end
config router static
    edit 1
       set gateway 10.0.21.253
       set device "port1" 
    next
end

